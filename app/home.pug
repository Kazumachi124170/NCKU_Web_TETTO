doctype html
html
  head
    title POST
    meta(charset="utf-8")
    meta(name="viewport", content="width=device-width, initial-scale=1")
    script(src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js")
    link(rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous")
    link(href="./css/all.css", rel="stylesheet")
    link(href="./css/font.css", rel="stylesheet")
    link(href="./css/Footer_Header.css", rel="stylesheet")
    link(href="./css/home.css", rel="stylesheet")
    link(href="./css/toggleswitch.css", rel="stylesheet")
  body
    //Fixed navbar
    div(class="container-fluid"  id="id_header")
      h1(class="tetto") TETTO


    // Content Conteiner
    div(class="container-fluid"  id="id_content")
      // Toggle switch
      div(class="switch_containter")
        span(class="switcher switcher-1")
          input(type="checkbox" id="switcher-1")
          label(for="switcher-1")
      // Posts
      div(class="posts" id="posts")


    //Footer
    div(class="container-fluid" id="id_footer")
      div(class="row")
        div(class="col")
          a(href="#MainPage")
            img(class="img-responsive footer_MainPage" src="../image/footer/MianPage.svg")
            h2(class="text MainPage") 主頁
        div(class="col")
          a(href="#Search")
            img(class="img-responsive footer_Search" src="../image/footer/Search.svg")
            h2(class="text Search") 搜尋
        div(class="col")
          a(href="#Category")
            img(class="img-responsive footer_Category" src="../image/footer/Category.svg")
            h2(class="text Category") 分類
        div(class="col")
          a(href="#Msg")
            img(class="img-responsive footer_Msg" src="../image/footer/Msg.svg")
            h2(class="text Msg") 通知
        div(class="col")
          a(href="#Profile")
            img(class="img-responsive footer_Profile" src="../image/footer/Profile.svg")
            h2(class="text Profile") 個人檔案

    script(src="./js/home.js")



